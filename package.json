{
  "name": "ng-magary-workspace",
  "version": "0.0.20",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:lib": "ng build ng-magary",
    "build:demo": "ng build demo-app",
    "build": "pnpm run build:lib && pnpm run build:demo",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ng-magary": "ng test ng-magary --watch=false",
    "test:demo-app": "ng test demo-app --watch=false",
    "test:unit": "pnpm run test:ng-magary && pnpm run test:demo-app",
    "test:unit:ci": "node tools/ci/run-unit-tests-clean.mjs",
    "test:coverage:critical:lib": "ng test ng-magary --watch=false --coverage --coverage-reporters=json-summary --coverage-reporters=text-summary --coverage-include=projects/ng-magary/src/lib/Panel/tabs/tab/tab.ts --coverage-include=projects/ng-magary/src/lib/Panel/toolbar/toolbar.ts --coverage-include=projects/ng-magary/src/lib/Services/theme.service.ts",
    "test:coverage:critical:demo": "ng test demo-app --watch=false --coverage --coverage-reporters=json-summary --coverage-reporters=text-summary --coverage-include=projects/demo-app/src/app/layout/layout.ts --coverage-include=projects/demo-app/src/app/layout/service/pwa.service.ts --coverage-include=projects/demo-app/src/app/components/theme-switcher/theme-switcher.component.ts",
    "check:coverage:critical": "node tools/ci/check-coverage-thresholds.mjs",
    "test:coverage:critical": "pnpm run test:coverage:critical:lib && pnpm run test:coverage:critical:demo && pnpm run check:coverage:critical",
    "check:api-contract": "node tools/ci/check-api-contract.mjs",
    "check:api-contract:update": "node tools/ci/check-api-contract.mjs --update-baseline",
    "check:no-any": "node tools/ci/check-no-any.mjs",
    "check:third-party": "node tools/ci/check-third-party-compliance.mjs",
    "check:demo-budgets": "node tools/ci/check-demo-budgets.mjs",
    "check:consumer-matrix": "node tools/ci/check-consumer-matrix.mjs",
    "lint": "eslint . --ext .ts,.html",
    "test:visual": "playwright test -c e2e/playwright/playwright.config.ts",
    "test:visual:regression": "playwright test -c e2e/playwright/playwright.config.ts --grep \"visual baseline\"",
    "test:visual:regression:update": "playwright test -c e2e/playwright/playwright.config.ts --update-snapshots --grep \"visual baseline\"",
    "test:visual:smoke": "playwright test -c e2e/playwright/playwright.config.ts e2e/playwright/specs/ci-smoke.spec.ts",
    "test:a11y:smoke": "playwright test -c e2e/playwright/playwright.config.ts e2e/playwright/specs/ci-a11y.spec.ts",
    "test:visual:update": "playwright test -c e2e/playwright/playwright.config.ts --update-snapshots",
    "qa:all": "pnpm run check:api-contract && pnpm run check:no-any && pnpm run check:third-party && pnpm run lint && pnpm run build:lib && pnpm run build:demo && pnpm run check:demo-budgets && pnpm run test:unit:ci && pnpm run test:visual:smoke && pnpm run test:a11y:smoke"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/build-angular": "^21.0.0",
    "@atlaskit/pragmatic-drag-and-drop": "^1.7.7",
    "@angular-eslint/bundled-angular-compiler": "21.0.0",
    "@angular/animations": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/service-worker": "^21.0.0",
    "gridstack": "^12.3.3",
    "highlight.js": "^11.11.1",
    "lucide": "^0.556.0",
    "lucide-angular": "^0.556.0",
    "ngx-highlightjs": "^14.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^21.0.0",
    "@angular-eslint/eslint-plugin": "^21.0.0",
    "@angular-eslint/eslint-plugin-template": "^21.0.0",
    "@angular-eslint/template-parser": "^21.0.0",
    "@angular/build": "^21.0.0",
    "@angular/cdk": "^21.0.3",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@axe-core/playwright": "^4.11.1",
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.58.2",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^4.0.18",
    "baseline-browser-mapping": "^2.9.19",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^52.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jsdom": "^27.0.1",
    "ng-packagr": "^21.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-jsdoc": "^1.3.3",
    "prettier-plugin-organize-imports": "^4.2.0",
    "typescript": "~5.9.0",
    "vitest": "^4.0.7"
  }
}
